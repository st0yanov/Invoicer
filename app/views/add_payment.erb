<% content_for :page_title do %>
    <%= t('add_payment.page_title') %>
<% end %>

<% content_for :page_content do %>
    <h1 class="page-header"><%= t('add_payment.content_heading') %></h1>
    <form id="addPaymentForm" method="post">
        <div class="form-group">
            <label class="control-label" for="invoice"><%= t('add_payment.form.invoice') %></label>
            <select class="form-control" id="invoice" name="invoice">
                <% @invoices.each do |invoice| %>
                    <option value="<%= invoice.id %>"><%= invoice.number %></option>
                <% end %>
            </select>
            <span class="help-block" style="display: none;"></span>
        </div>

        <div class="form-group">
            <label class="control-label" for="gateway"><%= t('add_payment.form.gateway') %></label>
            <input type="text" class="form-control" id="gateway" name="gateway">
            <span class="help-block" style="display: none;"></span>
        </div>

        <div class="form-group">
            <label class="control-label" for="date"><%= t('add_payment.form.date') %></label>
            <input type="date" class="form-control" id="date" name="date">
            <span class="help-block" style="display: none;"></span>
        </div>

        <div class="form-group">
            <label class="control-label" for="transaction_id"><%= t('add_payment.form.transaction') %></label>
            <input type="text" class="form-control" id="transaction_id" name="transaction_id">
            <span class="help-block" style="display: none;"></span>
        </div>

        <div class="form-group">
            <label class="control-label" for="amount"><%= t('add_payment.form.amount') %></label>
            <input type="number" class="form-control" id="amount" name="amount" min="0.00" step="0.01">
            <span class="help-block" style="display: none;"></span>
        </div>

        <button type="submit" class="btn btn-default"><%= t('add_payment.form.submit') %></button>
    </form>

    <div class="result alert" role="alert" style="display: none;"></div>
<% end %>

<% content_for :footer_assets do %>
    <script type="text/javascript" src="<%= url('/assets/js/custom/add_payment.js') %>"></script>
<% end %>